---
const { tag } = Astro.props

const tags = {
    puzzle: "#a2e862",
    jeu: "#ff6aff",
    fidget: "#FFFFFF",
}

---

<a href={`/3DPrinting/tags/${tag.toLowerCase()}`}  class="tag" style={`background-color: ${tags[tag.toLowerCase()]}`} >{tag}</a>

<style>
    .tag {
        text-decoration: underline;
        padding: 10px 20px;
        border-radius: 10px;
        color: var(--black);
    }
</style>