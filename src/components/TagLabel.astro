---
const { tag } = Astro.props as { tag: string }

import { tagToColor } from '../utils/coloring'

---

<a href={`/3DPrinting/tags/${tag.toLowerCase()}`}  class="tag" style={`background-color: ${tagToColor(tag)}`} >{tag}</a>

<style>
    .tag {
        text-decoration: underline;
        padding: 10px 20px;
        border-radius: 10px;
        color: var(--black);
    }
</style>